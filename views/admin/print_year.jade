extends ../layout_admin
block content
    .row
        include ./sidebar_admin
        .col.s8
            .row
                .col.s12
                    h5 Добавить
                    a.modal-trigger.waves-effect.waves-light.btn(href='#addYear')
                        i.material-icons add
            .row
                h3 Годы выпуска
                .col.s12
                    table.responsive-table.bordered
                        thead
                            tr
                                th(data-field='') №
                                th(data-field='') Год
                                th(data-field='')
                        tbody
                            each y, i in years
                                tr(name='#{y.title}')
                                    td #{i+1}
                                    td #{y.title}
                                    td
                                        a.waves-effect.waves-light.btn(href="#!")
                                            i.material-icons delete

            #addYear.modal
                .modal-content
                    //h4 Добавить нового пользователя
                    .row
                        if message
                            .alert.alert-danger #{ message }
                        form#userAdd.col.s12(action="/print_years" method="post")
                            .row
                                .input-field.col.s12
                                    i.material-icons.prefix person_outline
                                    input(type='text', name="title")
                                    label(for='title') Год выпуска
                            .modal-footer
                                input(type="submit", value="Сохранить", class="btn btn-success")
                                a.modal-action.modal-close.waves-effect.waves-red.btn-flat(href='#!') Отмена
