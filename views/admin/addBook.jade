extends ../layout_admin

block content
    .row
        .col.s4
        .col.s8
            .row
                if messages.info
                    script(type='text/javascript').
                        Materialize.toast('info', 4000)

                form.col.s12(name="textInf", action='/addbook/', method='post')
                    .row
                        .input-field.col.s12
                            input#book_title(type='text', name='book_title')
                            label(for='title') Название
                    .row
                        .input-field.col.s12.sel-auth
                                select#book_author(name='book_author')
                                    option(value='нет', disable selected) Нет
                                    option(value='Option 1') Option 1
                                    option(value='Option 2') Option 2
                                    option(value='Option 3') Option 3
                                label Автор
                    .row
                        .input-field.col.s4
                                select#book_type(name='book_type')
                                    option(value='нет', disabled selected) Выбрать тип
                                    option(value='Option 1') Option 1
                                    option(value='Option 2') Option 2
                                    option(value='Option 3') Option 3
                                label Тип
                        .input-field.col.s4
                                select#year_pub(name='year_pub')
                                    option(value='нет', disabled selected) Выбрать год издания
                                    option(value='Option 1') Option 1
                                    option(value='Option 2') Option 2
                                    option(value='Option 3') Option 3
                                label Год издания
                        .input-field.col.s4
                                select#book_lang(name='book_lang')
                                    option(value='нет', disabled selected) Выбрать язык книги
                                    option(value='Option 1') Option 1
                                    option(value='Option 2') Option 2
                                    option(value='Option 3') Option 3
                                label Язык книги
                    .row
                        .col.s12
                                input(type="submit", value="Сохранить", class="btn btn-success")

                form.col.s12#bookThumb(action='#', method='POST')
                    .row
                        .file-field.input-field
                            .btn
                                span Обложка книги
                                input#book_image(type='file', name='book_image')
                            .file-path-wrapper
                                input.file-path(type='text')

                form.col.s12#bookLink(action='#', method='POST')
                    .row
                        .file-field.input-field
                            .btn
                                span Ссылка для скачивания
                                input#downloadLink(type='file', name='linkforDown')
                            .file-path-wrapper
                                input.file-path(type='text')