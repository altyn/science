doctype html
html
    head
        include ./includes/header

    style(type='text/css', media='screen').
        html,body {
            height: 100%;
        }
        html {
            display: table;
            margin: auto;
        }
        body {
            background-color: #002147;
            display: table-cell;
            vertical-align: middle;
        }
        footer.page-footer {
            background-color: rgba(26, 35, 126, 0);
        }

    body
        block content
        footer.page-footer
            .footer-copyright
